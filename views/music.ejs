<%- include ("partials/header") %>
<div class="container-fluid mx-0">
    <div class="jumbotron mx-0 text-center bg-light">
        <h1>Broumvirate Records</h1>
        <h4 class="text-muted">Our music division</h4>
    </div>

    <div class="container pb-4">
        <div class="row justify-content-around">
            <%for(let i = 0; i < music.length; i++){%>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card text-white bg-dark m-3">
                    <img
                        src="<%=music[i].image%>"
                        class="card-img-top bm-music-card"
                        alt="<%=music[i].title%> Album Art"
                    />
                    <div class="card-img-overlay">
                        <div class="hover-icons text-center">
                            <a
                                href="<%=music[i].applemusic%>"
                                ><i class="fab fa-itunes-note mr-5"></i
                            ></a>
                            <a
                                href="<%=music[i].spotify%>"
                                ><i class="fab fa-spotify"></i
                            ></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%=music[i].title%></h5>
                        <h6 class="card-subtitle text-muted"><%=music[i].description%></h6>
                    </div>
                </div>
            </div>
            <%}%>
        </div>

        <!-- <div class="row mt-3">
