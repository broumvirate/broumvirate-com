<%- include ("partials/header") %>

<!--Get outta my website Jacob -->

<header class="jumbotron mb-0">
    <div class="container">
        <h1 class="display-4">Welcome to The Broumvirate</h1>
        <p class="lead">Bro-um-vir-ate</p>
    </div>
</header>

<div
    id="carouselFrontPage"
    class="carousel slide m-0 pt-4 pb-2"
    data-ride="carousel"
>
    <div class="container">
        <div class="carousel-inner m-0">
            <div class="carousel-item active my-2">
                <h4>"<%=quotes[0].quote%>"</h4>
                <p class="bm-carousel-q">- <%=quotes[0].by%></p>
                <p></p>
            </div>
            <%for(let i = 1; i < quotes.length; i++){%>
                <div class="carousel-item my-2">
                    <h4>"<%=quotes[i].quote%>"</h4>
                    <p class="bm-carousel-q">- <%=quotes[i].by%></p>
                    <p></p>
                </div>
            <%}%>
        </div>
    </div>
    <a
        class="carousel-control-prev"
        href="#carouselFrontPage"
        role="button"
        data-slide="prev"
    >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a
        class="carousel-control-next"
        href="#carouselFrontPage"
        role="button"
        data-slide="next"
    >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container mt-4">
    <div class="row d-flex justify-content-around">
        <div class="card col-md-5 p-0 m-3">
            <img
                class="card-img-top mx-0 bm-f-card-top"
                src="https://broumvirate.s3.us-east-2.amazonaws.com/img/broumvirateworstof.png"
                alt="Card image cap"
            />
            <div class="card-body">
                <h5 class="card-title">Broumvirate: Worst Of</h5>
                <p class="card-text">
                    We've released our first album! <br> You will not enjoy it.
                </p>
                <a
                    href="https://www.broumvirate.com/music"
                    class="btn btn-primary"
                    >Listen Now</a
                >
            </div>
        </div>
        <div class="card col-md-5 p-0 m-3">
            <img
                class="card-img-top mx-0 bm-f-card-top"
                src="https://i.imgur.com/HWwsRma.png"
                alt="Card image cap"
            />
            <div class="card-body">
                <h5 class="card-title">Dr. Bones's Locker</h5>
                <p class="card-text">
                    We've recently launched our daily podcast reviewing
                    JasonBall34's webcomic "A Pirate's Life"
                </p>
                <a
                    href="https://www.youtube.com/channel/UCdgGADZ25mo-KPFB0FGXpQg"
                    class="btn btn-primary"
                    >Watch Now</a
                >
            </div>
        </div>
    </div>
</div>

<%- include ("partials/footer") %>
